<div class="main-signup-container">
<div class="signup-container">
<h2 class="signup">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, class:"name-label" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"name-input", placeholder: "Email" %>
  </div>

  <div class="field">
    <%= f.label :password, class:"name-label" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class:"name-input", placeholder: "Password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class:"signup-button" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>
</div>
