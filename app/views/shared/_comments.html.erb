<ul class="user comment">
<% if post.comments.any? %>
    <% post.comments.each do |comment| %>
    <li class="content-comment">
        <p class="content-commentt">
            <%= User.find(comment.author_id).name %>:<%= comment.text %>
            <% if can? :destroy , @post %>
                <%= button_to '', user_post_comment_path(@user , post , comment), method: :delete, style: "background-image: url(#{asset_path('delete.svg')})", class: "delete-btn" %>
            <%end%>
        </p>
    </li>
    <% end %>
    <% else %>
    <h3 class="no-comments">No hay comentarios</h3>

  
<% end %>
</ul>